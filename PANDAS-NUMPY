# Crear DataFrame
df = pd.DataFrame(data)

# Mostrar primeras filas
print("DataFrame:\n", df.head(), "\n")

# Ejemplos de an√°lisis
print("üîπ Total de ventas por cliente:\n", df.groupby("Nombre_Cliente")["Total"].sum(), "\n")
print("üîπ Producto m√°s vendido (por cantidad):\n", df.groupby("Producto")["Cantidad"].sum().sort_values(ascending=False), "\n")
print("üîπ Venta total general:", df["Total"].sum())
print("üîπ Promedio de venta:", np.mean(df["Total"]))
